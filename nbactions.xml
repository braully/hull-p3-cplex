                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Djava.library.path="/dados/programas/cplex/cplex/bin/x86-64_linux" -classpath %classpath io.github.braully.cplex.HullP3Cplex</exec.args>
                <exec.executable>java</exec.executable>
